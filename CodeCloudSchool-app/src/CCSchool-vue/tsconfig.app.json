{
  "extends": "./tsconfig.base.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "electron/**/*.ts"],
  "exclude": ["src/**/__tests__/*", "dist", "node_modules"],
  "compilerOptions": {
    "tsBuildInfoFile": "./.cache/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@electron/*": ["electron/*"]  // Add Electron-specific aliases
    },
    // Electron-specific settings
    "target": "ESNext",             // Electron uses modern JS
    "module": "CommonJS",           // Required for Electron main process
    "outDir": "./dist",             // Output directory for compiled TS
    "types": ["node", "electron"]   // Include Electron typings
  }
}